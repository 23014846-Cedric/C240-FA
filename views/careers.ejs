        </div>
    </div>
</section>

<% } %>

<!-- ================= MODULE ================= -->
<% if (activeModule !== 'home') { %>
<section class="module-content">
    <div class="container">
        <div class="module-header">
            <h1><%= title %></h1>
            <button class="btn btn-primary" onclick="openChatbot()">
                <i class="fas fa-robot"></i> Ask AI Assistant
            </button>
        </div>

        <div id="moduleContainer">
          <!-- Your Background Section -->
          <section class="card">
            <div class="section-header">
              <h2>ðŸ“š Your Background</h2>
              <p class="subtitle">Tell us about your current education and career stage</p>
            </div>

            <form id="backgroundForm" class="form-stack">
              <!-- Education Level / Career Stage -->
              <div class="form-group">
                <label for="educationLevel">Education Level / Career Stage <span class="required">*</span></label>
                <select id="educationLevel" name="educationLevel" required>
                  <option value="">Select your current stage...</option>
                  <option value="high-school">High School Student</option>
                  <option value="undergraduate">Undergraduate Student</option>
                  <option value="graduate">Graduate Student</option>
                  <option value="entry-level">Entry Level Professional</option>
                  <option value="mid-career">Mid-Career Professional</option>
                  <option value="senior">Senior Professional</option>
                  <option value="executive">Executive/Leadership</option>
                  <option value="transitioning">Career Transitioning</option>
                  <option value="self-employed">Self-Employed/Entrepreneur</option>
                </select>
              </div>

              <!-- Current Field of Study / Job Title -->
              <div class="form-group">
                <label for="fieldOfStudy">Current Field of Study / Job Title <span class="required">*</span></label>
                <input 
                  type="text" 
                  id="fieldOfStudy" 
                  name="fieldOfStudy" 
                  placeholder="e.g., Computer Science Student, Software Engineer, Product Manager"
                  required>
                <small class="helper-text">Be specific - this helps us understand your starting point</small>
              </div>

              <!-- Years of Experience -->
              <div class="form-group">
                <label for="yearsExperience">Years of Experience</label>
                <input 
                  type="number" 
                  id="yearsExperience" 
                  name="yearsExperience" 
                  min="0" 
                  placeholder="0"
                  value="0">
                <small class="helper-text">Enter 0 if you're a student or recent graduate</small>
              </div>

              <!-- Certifications / Completed Courses -->
              <div class="form-group">
                <label for="certifications">Certifications / Completed Courses <span class="optional">(optional)</span></label>
                <textarea 
                  id="certifications" 
                  name="certifications" 
                  placeholder="e.g., AWS Certified Developer, Google Data Analytics, etc."
                  rows="4"></textarea>
                <small class="helper-text">Separate multiple items with commas</small>
              </div>

              <!-- Submit Button -->
              <div class="form-actions">
                <button type="submit" class="btn btn-primary">Submit Background</button>
                <button type="reset" class="btn btn-secondary">Clear</button>
              </div>
            </form>
          </section>
        </div>
    </div>
</section>
<% } %>

